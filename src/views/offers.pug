        script.
            $('.slider').slick({
                dots: false,
                infinite: false,
                speed: 1500,
                slidesToShow: 3,
                slidesToScroll: 1,
                responsive: [
                    {
                    breakpoint: 1024,
                    settings: {
                        slidesToShow: 3,
                        slidesToScroll: 3,
                        infinite: false,
                        dots: false
                    }
                    },
                    {
                    breakpoint: 680,
                    settings: {
                        slidesToShow: 2,
                        slidesToScroll: 1
                    }
                    },
                    {
                    breakpoint: 480,
                    settings: {
                        slidesToShow: 1,
                        slidesToScroll: 1
                    }
                    }
                    // You can unslick at a given breakpoint now by adding:
                    // settings: "unslick"
                    // instead of a settings object
                ]
                });
        script.
            $( function() {
            $( "#slider-range" ).slider({
            range: true,
            min: 0,
            max: 20000,
            values: [ 550, 20000 ],
            slide: function( event, ui ) {
            $( "#amount" ).val( "UAH" + ui.values[ 0 ] + " - UAH" + ui.values[ 1 ] );
            }
            });
            $( "#amount" ).val( "UAH" + $( "#slider-range" ).slider( "values", 0 ) +
            " - UAH" + $( "#slider-range" ).slider( "values", 1 ) );
            } );
        script.
